# Maintainer: Your Name <your.email@example.com>
pkgname=floo
pkgver=0.1.2
pkgrel=1
pkgdesc="Secure, high-performance tunneling in Zig. Expose your home services or access remote ones"
arch=('x86_64' 'aarch64')
url="https://github.com/YUX/floo"
license=('MIT')
provides=('floo' 'flooc' 'floos')
conflicts=('floo-git')
source_x86_64=("${pkgname}-${pkgver}-x86_64.tar.gz::https://github.com/YUX/floo/releases/download/v${pkgver}/floo-x86_64-linux-gnu-haswell.tar.gz")
source_aarch64=("${pkgname}-${pkgver}-aarch64.tar.gz::https://github.com/YUX/floo/releases/download/v${pkgver}/floo-aarch64-linux-gnu.tar.gz")
sha256sums_x86_64=('4087230211f3064c3644eb8cad115c94bfa34bc682c07191ea11228f3cd09a66')
sha256sums_aarch64=('5f0c75550c0bb18fa72d547bc044d28f0eeefedbe399c1903ac06975c679a031')

package() {
    cd "${srcdir}/${pkgname}-${pkgver}-${CARCH}"

    # Install binaries
    install -Dm755 flooc "${pkgdir}/usr/bin/flooc"
    install -Dm755 floos "${pkgdir}/usr/bin/floos"

    # Install documentation
    install -Dm644 README.md "${pkgdir}/usr/share/doc/${pkgname}/README.md"

    # Install example configs
    install -Dm644 flooc.toml.example "${pkgdir}/usr/share/doc/${pkgname}/examples/flooc.toml.example"
    install -Dm644 floos.toml.example "${pkgdir}/usr/share/doc/${pkgname}/examples/floos.toml.example"

    # Install license (if included in tarball)
    if [ -f LICENSE ]; then
        install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
    fi
}
